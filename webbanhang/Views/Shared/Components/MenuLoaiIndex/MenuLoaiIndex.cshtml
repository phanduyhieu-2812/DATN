@model IEnumerable<webbanhang.ViewModels.HangHoaVM>
@{
    ViewData["Title"] = "MenuLoaiIndex";
}

<div class="col-lg-12">
    <div class="mb-3">
        <h4>Thương hiệu</h4>
        <ul class="list-unstyled fruite-categorie">
            @foreach (var item in Model)
            {
                <li>
                    <div class="d-flex justify-content-between fruite-name">
                        <a asp-controller="HangHoa" asp-action="BrandIndex" asp-route-brand="@item.Mabrand" asp-route-Loai="@ViewContext.RouteData.Values["Loai"]">
                              @item.Tenbrand
                        </a>                  
                    </div>
                </li>
            }
        </ul>
    </div>
</div>

