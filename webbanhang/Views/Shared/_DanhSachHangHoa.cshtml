@{
    Layout = "_Mainlayout";
}


<!-- Single Page Header Start -->
@RenderSection("BreadCum", required: false)

<!-- Single Page Header End -->
<!-- Fruits Shop Start-->
<div class="container-fluid fruite py-5">
    <div class="container py-5">
        <h1 class="mb-4">Fresh fruits shop</h1>
        <div class="row g-4">
            <div class="col-lg-12">
                <div class="row g-4">
                    <div class="col-xl-3">
                        <div class="input-group w-100 mx-auto d-flex">
                            <form asp-action="Search" asp-controller="HangHoa">
                                <div id="cover1">
                                    <div class="tb1">
                                        <div class="td1"><input type="text" placeholder="Search" name="query" required class="custom-input1"></div>
                                        <div class="td1" id="s-cover1">
                                            <button type="submit" class="custom-button1">
                                                <div id="s-circle1"></div>
                                                <span></span>
                                            </button>
                                        </div>
                                    </div>
                                </div>                             
                            </form>
                        </div>
                    </div>
                    <div class="col-6"></div>
                    <div class="col-xl-3">
                        <div class="bg-light ps-3 py-3 rounded d-flex justify-content-between mb-4">
                            <div class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Sắp xếp: </a>
                                <div class="dropdown-menu m-0 bg-secondary rounded-0">
                                    <a asp-action="Index" asp-controller="HangHoa" asp-route-order ="1" class="dropdown-item">A -> Z</a>
                                    <a asp-action="Index" asp-controller="HangHoa" asp-route-order="2" class="dropdown-item">Z -> A</a>
                                    <a asp-action="Index" asp-controller="HangHoa" asp-route-order="3" class="dropdown-item">Giá cao -> thấp</a>
                                    <a asp-action="Index" asp-controller="HangHoa" asp-route-order="4" class="dropdown-item">Giá thấp đến cao</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row g-4">
                    <div class="col-lg-3">
                        <div class="row g-4">
                            <form asp-action="Index" asp-controller="HangHoa">
                            @await Component.InvokeAsync("MenuLoai")                          
                            @await Component.InvokeAsync("MenuLoaiIndex")  
                            </form>
                            <div class="col-lg-12">
                                <div class="position-relative">
                                    <img src="~/Hinh/Index/bannerShop.png" class="img-fluid w-100 rounded" alt="">                                
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-9">
                        <div class="row g-4 justify-content-center">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    * {
        outline: none;
    }



    .tb1 {
        display: table;
        width: 100%;
    }

    .td1 {
        display: table-cell;
        vertical-align: middle;
    }

    .custom-input1 {
        color: #fff;
        font-family: Arial;
        padding: 0;
        margin: 0;
        border: 0;
        background-color: transparent;
        width: 100%;
        height: 100%;
        font-size: 40px;
        line-height: 1;
    }

    input[type="text"]::placeholder {
        color: #fff;
    }

    #cover1 {
        position: absolute;
        top: 50%;
        left: 0;
        right: 0;
        height:125px;
        width: 520px;
        padding: 35px;
        margin: -40px 0 0px -110px;
        background-color: #81c408;
        border-radius: 20px;
        box-shadow: 0 10px 40px #81c408, 0 0 0 20px #ffffffeb;
        transform: scale(0.6);
    }



    #s-cover1 {
        width: 1px;
        padding-left: 35px;
    }

    .custom-button1 {
        color: #fff;
        font-family: Nunito;
        padding: 0;
        margin: 0;
        border: 0;
        background-color: transparent;
        position: relative;
        display: block;
        width: 84px;
        height: 96px;
        cursor: pointer;
    }

    #s-circle1 {
        position: relative;
        top: -8px;
        left: 0;
        width: 76px;
        height: 76px;
        margin-top: -15px;
        margin-left: -15px;
        border-width: 15px;
        border: 15px solid #fff;
        background-color: transparent;
        border-radius: 50%;
        transition: 0.5s ease all;
    }

    

    #s-cover1:hover #s-circle1 {
        top: -1px;
        width: 67px;
        height: 15px;
        border-width: 0;
        background-color: #fff;
        border-radius: 20px;
    }

    #s-cover1:hover span {
        top: 50%;
        left: 56px;
        width: 25px;
        margin-top: -11px;
        transform: rotateZ(0);
    }

    #s-cover1:hover button span:before {
        bottom: 11px;
        transform: rotateZ(52deg);
    }

    #s-cover1:hover button span:after {
        bottom: -11px;
        transform: rotateZ(-52deg);
    }

    #s-cover1:hover button span:before,
    #s-cover1:hover button span:after {
        right: -6px;
        width: 40px;
        background-color: #fff;
    }

</style>

<!-- Fruits Shop End-->