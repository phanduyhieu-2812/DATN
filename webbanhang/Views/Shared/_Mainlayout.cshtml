                                    <a asp-action="CheckOut" asp-controller="Cart" class="dropdown-item">Thanh Toán</a>
                                    <a asp-action="OderHistory" asp-controller="Cart" class="dropdown-item">Lịch sử mua hàng</a>
                                    <a asp-action="Index" asp-controller="Admin" class="dropdown-item">Quản lí</a>



                                </div>
                            </div>
                            <a asp-action="CheckOut" asp-controller="Cart" class="nav-item nav-link active">Thanh Toán</a>


                        </div>
                        <div class="d-flex m-3 me-0">
                            <button class="btn-search btn border border-secondary btn-md-square rounded-circle bg-white me-4" data-bs-toggle="modal" data-bs-target="#searchModal"><i class="fas fa-search text-primary"></i></button>
                            @await Component.InvokeAsync("Cart")
