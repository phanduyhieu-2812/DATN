@model IEnumerable<webbanhang.ViewModels.HangHoaVM>
<!DOCTYPE html>

<html>
   <head>
    
   </head>
 <body>
    <div class="container-fluid py-5 mb-5 hero-header">
    <div class="container py-5">
    <div class="row g-5 align-items-center">
        <div class="col-md-12 col-lg-7">
            <h4 class="mb-3 text-secondary">Thời trang giới trẻ</h4>
            <h1 class="mb-5 display-3 text-primary">Đa dạng kiểu dáng và thương hiệu</h1>
        
        </div>
        <div class="col-md-12 col-lg-5">
            <div id="carouselId" class="carousel slide position-relative" data-bs-ride="carousel">
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active rounded">                    
                            <img  src="~/Hinh/Index/TShirt.png" class="img-fluid w-100 h-100 bg-secondary rounded" alt="First slide">                    
                        <a asp-controller="HangHoa" asp-action="Search" asp-route-query="T-shirt" class="btn px-4 py-2 text-white rounded">T-Shirt</a>
                    </div>
                    <div class="carousel-item rounded">
                        <img src="~/Hinh/Index/Hoodie.png" class="img-fluid w-100 h-100 rounded" alt="Second slide">
                        <a asp-controller="HangHoa" asp-action="Search" asp-route-query="HOODIE" class="btn px-4 py-2 text-white rounded">Hoodie</a>
                    </div>
                    <div class="carousel-item rounded">
                        <img src="~/Hinh/Index/Paint.png" class="img-fluid w-100 h-100 rounded" alt="Third slide">
                                <a asp-controller="HangHoa" asp-action="Search" asp-route-query="PANT" class="btn px-4 py-2 text-white rounded">Paint</a>
                    </div>
                    <div class="carousel-item rounded">
                        <img src="~/Hinh/Index/Shirt-removebg.png" class="img-fluid w-100 h-100 rounded" alt="Fourth slide">
                                <a asp-controller="HangHoa" asp-action="Search" asp-route-query="SHIRT" class="btn px-4 py-2 text-white rounded">Shirt</a>
                    </div>
                    <div class="carousel-item rounded">
                        <img src="~/Hinh/Index/Crop-Top.png" class="img-fluid w-100 h-100 rounded" alt="Fifth slide">
                                <a asp-controller="HangHoa" asp-action="Search" asp-route-query="CROPTOP" class="btn px-4 py-2 text-white rounded">Crop-Top</a>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselId" data-bs-slide="prev">
                 <      
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselId" data-bs-slide="next">               
                 >   
                </button>
            </div>
        </div>
    </div>
    </div>
    </div>
    <!-- Featurs Section Start -->
    <div class="container-fluid featurs py-5">
        <div class="container py-5">
            <div class="row g-4">
                <div class="col-md-6 col-lg-3">
                    <div class="featurs-item text-center rounded bg-light p-4">
                        <div class="featurs-icon btn-square rounded-circle bg-secondary mb-5 mx-auto">
                            <i class="fas fa-car-side fa-3x text-white"></i>
                        </div>
                        <div class="featurs-content text-center">
                            <h5>Miễn phí Ship</h5>
                            <p class="mb-0">Miễn phí ship trong nội thành Hà Nội</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="featurs-item text-center rounded bg-light p-4">
                        <div class="featurs-icon btn-square rounded-circle bg-secondary mb-5 mx-auto">
                            <i class="fas fa-user-shield fa-3x text-white"></i>
                        </div>
                        <div class="featurs-content text-center">
                            <h5>Bảo mật thanh toán</h5>
                            <p class="mb-0">100% bảo mật thông tin khách hàng</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="featurs-item text-center rounded bg-light p-4">
                        <div class="featurs-icon btn-square rounded-circle bg-secondary mb-5 mx-auto">
                            <i class="fas fa-exchange-alt fa-3x text-white"></i>
                        </div>
                        <div class="featurs-content text-center">
                            <h5>Đổi trả nhanh chóng</h5>
                            <p class="mb-0">Đổi trả sản phẩm trong vòng 5 ngày</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="featurs-item text-center rounded bg-light p-4">
                        <div class="featurs-icon btn-square rounded-circle bg-secondary mb-5 mx-auto">
                            <i class="fa fa-phone-alt fa-3x text-white"></i>
                        </div>
                        <div class="featurs-content text-center">
                            <h5>Hỗ trợ 24/7</h5>
                            <p class="/mb-0">Hỗ trợ mọi lúc mọi nơi</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Featurs Section End -->
    <!-- Fruits Shop Start-->
    <div class="container-fluid fruite py-5">
        <div class="container py-5">
            <div class="tab-class text-center">
                <div class="row g-4">
                    <div class="col-lg-4 text-start">
                        <h1>Sản phẩm Trendy</h1>
                    </div>
                    <div class="col-lg-8 text-end">
                        <ul class="nav nav-pills d-inline-flex text-center mb-5">
                            <li class="nav-item">
                                <a class="d-flex m-2 py-2 bg-light rounded-pill active" data-bs-toggle="pill" href="#tab-1">
                                    <span class="text-dark" style="width: 130px;">All Products</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="d-flex py-2 m-2 bg-light rounded-pill" data-bs-toggle="pill" href="#tab-2">
                                    <span class="text-dark" style="width: 130px;">Jacket</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="d-flex m-2 py-2 bg-light rounded-pill" data-bs-toggle="pill" href="#tab-3">
                                    <span class="text-dark" style="width: 130px;">T-Shirt</span>
                                </a>
                            </li>                                            
                        </ul>
                    </div>
                </div>
                <div class="tab-content">
                    <div id="tab-1" class="tab-pane fade show p-0 active">
                        <div class="row g-4">
                            <div class="col-lg-12">
                                <div class="row g-4">
                                    @await Component.InvokeAsync("Product")
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="tab-2" class="tab-pane fade show p-0">
                        <div class="row g-4">
                            <div class="col-lg-12">
                                <div class="row g-4">
                                    
                                        @await Component.InvokeAsync("ProductJacket")
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="tab-3" class="tab-pane fade show p-0">
                        <div class="row g-4">
                            <div class="col-lg-12">
                                <div class="row g-4">
                                    @await Component.InvokeAsync("Product1")
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="tab-4" class="tab-pane fade show p-0">
                        <div class="row g-4">
                            <div class="col-lg-12">
                                <div class="row g-4">
                                    @await Component.InvokeAsync("ProductShirt")
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Fruits Shop End-->

    <!-- Featurs Start -->
    <div class="container-fluid service py-5">
        <div class="container py-5">
            <div class="row g-4 justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <a asp-action="Search" asp-controller="HangHoa" asp-route-query="BACKPACK">
                        <div class="service-item bg-secondary rounded border border-secondary">
                            <img src="~/Hinh/Index/BACKPACK.jpg" class="img-fluid rounded-top w-100" alt="">
                            <div class="px-4 rounded-bottom">
                                <div class="service-content bg-primary text-center p-4 rounded">
                                    <h5 class="text-white">Balo thời trang</h5>
                                    <h3 class="mb-0">Không gian rộng rãi</h3>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-md-6 col-lg-4">
                    <a asp-action="Search" asp-controller="HangHoa" asp-route-query="BAG">
                        <div class="service-item bg-dark rounded border border-dark">
                            <img src="~/Hinh/Index/BAG.jpg" class="img-fluid rounded-top w-100" alt="">
                            <div class="px-4 rounded-bottom">
                                <div class="service-content bg-light text-center p-4 rounded">
                                    <h5 class="text-primary">Mẫu túi mới</h5>
                                    <h3 class="mb-0">Đa dạng kiểu dáng</h3>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-md-6 col-lg-4">
                    <a asp-action="Search" asp-controller="HangHoa" asp-route-query="SHORT">
                        <div class="service-item bg-primary rounded border border-primary">
                            <img src="~/Hinh/Index/SHORT.jpg" class="img-fluid rounded-top w-100" alt="">
                            <div class="px-4 rounded-bottom">
                                <div class="service-content bg-secondary text-center p-4 rounded">
                                    <h5 class="text-white">Quần Short</h5>
                                    <h3 class="mb-0">Thời trang và thoáng mát</h3>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <!-- Featurs End -->
    <!-- Banner Section Start-->
    <div class="container-fluid banner bg-secondary my-5">
        <div class="container py-5">
            <div class="row g-4 align-items-center">
                <div class="col-lg-6">
                    <div class="py-4">
                        <h1 class="display-3 text-white">Thế giới thời trang đang chờ đón bạn</h1>
                        <p class="fw-normal display-3 text-dark mb-4">Hãy bước vào!</p>
                        <p class="mb-4 text-dark">Tự tin, cuốn hút và đầy phong cách - Đó là chúng tôi!</p>
                        <a asp-action="Index" asp-controller="HangHoa" class="banner-btn btn border-2 border-white rounded-pill text-dark py-3 px-5">Mua Ngay</a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="position-relative">
                        <img src="~/Hinh/Index/Banner.png" class="img-fluid w-100 rounded" alt="">
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Banner Section End -->
    <!-- Bestsaler Product Start -->
    <div class="container-fluid py-5">
        <div class="container py-5">
            <div class="text-center mx-auto mb-5" style="max-width: 700px;">
                <h1 class="display-4">Bestseller Products</h1>
                <p>Sự xuất sắc không bao giờ lỗi thời!</p>
            </div>
            <div class="row g-4">
                @await Component.InvokeAsync("Bestseller")
                
            </div>
        </div>
    </div>
    <!-- Bestsaler Product End -->



    

</body>
</html>
