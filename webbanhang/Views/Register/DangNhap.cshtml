@model webbanhang.ViewModels.Login
@{
    ViewData["Title"] = "Đăng nhập";
}
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Đăng nhập</h1>
   
</div>
<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Đăng nhập</h1>
        <span class="text-danger">@TempData["Message"]</span>
        <form asp-action="DangNhap" asp-controller="Register" asp-route-returnurl="@ViewBag.ReturnUrl">
            <div class="row">
                <div class="form-item">
                    <label class="form-label my-3" asp-for="@Model.Username"></label>
                    <input asp-for="@Model.Username" class=" form-control">
                    <span asp-validation-for="@Model.Username" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-item">
                    <label class="form-label my-3" asp-for="@Model.Password"></label>
                    <input asp-for="@Model.Password" class=" form-control">
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="container11">
                    <a asp-action="DangKy" asp-controller="Register" class="left-link">Đăng kí</a>
                    <a asp-action="SendCode" asp-controller="Register" class="right-link">Quên mật khẩu?</a>
                </div>
            </div>
            <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Đăng Nhập</button>
            </div>
        </form>
        <form asp-action="ChangePassword" asp-controller="Register">
            <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Đổi mật khẩu</button>
            </div>
        </form>
    </div>
</div>
<style>
    .container11 {
        display: flex;
        justify-content: space-between;
    }

    .left-link {
        order: 1; /* Xếp thứ tự sang trái */
    }

    .right-link {
        order: 2; /* Xếp thứ tự sang phải */
    }

</style>


